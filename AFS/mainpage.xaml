<Page x:Class="AFS.mainpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AFS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainpage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                    Width="300" Height="95" Background="WhiteSmoke">
            <TextBlock TextAlignment="Center" Margin="10"> Введите ID АЗС</TextBlock>
            <TextBox x:Name="mama"  Width="100"></TextBox>
            <Button Width="90" Height="20" Margin="8" Content="Загрузить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
